{{else}}
<div>Open the world for your child</div>
<h1>Login</h1>

<form action="/login" method="POST">
  <input type="text" name="email" placeholder="Email address">
  <input type="password" name="password" placeholder="Password">
  <button type="submit">Log in</button>
</form>

<h1>Create an account</h1>
<h2>It's quick and easy.</h2>

<h4>For a parent</h4>
<form action="/signup" method="POST">
  <input type="text" name="name" id="name" placeholder="First name"><br>
  <input type="text" name="surname" id="surname" placeholder="Last name"><br>
  <input type="text" name="childName" id="childName" placeholder="Child name"><br>
  <input type="text" name="nativeLanguage" id="nativeLanguage" placeholder="Native language"><br>
  <input type="text" name="email" placeholder="Email address"><br>
  <input type="password" name="password" placeholder="New password"><br>
  <button type="submit">Sign up</button>
</form>
{{/if}}
