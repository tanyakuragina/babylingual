<h4 class="d-flex ml-2 mt-2">Create your room to start</h4>
<div class="d-flex ml-2">
  <form action="/rooms" method="POST" id="createRoom">
    <div class="form-group">
      <label for="exampleInputEmail1" class="d-flex justify-content-center">Name of the room</label>
      <input type="text" class="form-control" id="exampleInputEmail1" name="roomName" aria-describedby="emailHelp"
        placeholder="Room name">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="d-flex justify-content-center">Share your link</label>
      <input type="text" name="link" class="form-control" id="exampleInputPassword1" placeholder="Link">
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">Share</button>
    </div>
  </form>
  <div class="mx-auto">
    <h2>You can use dictionary</h2>
    <form action="/word" id="newForm">
      <input type="text" name="word" id="word" placeholder="word">
      <button type="submit">Get Word</button>
    </form>
  </div>
  <div id="message"></div>
</div>
