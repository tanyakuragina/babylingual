{{#if user}}
<div class="d-flex">


  <div class="col-3 m-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="/rooms" role="tab"
        aria-controls="v-pills-home" aria-selected="true">Find A Room</a>

      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="/" role="tab"
        aria-controls="v-pills-profile" aria-selected="false">Dashboard</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="/profile" role="tab"
        aria-controls="v-pills-profile" aria-selected="false">My Profile</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="/all-bilinguals" role="tab"
        aria-controls="v-pills-profile" aria-selected="false">Show all biliguals</a>
      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="/room" role="tab"
        aria-controls="v-pills-messages" aria-selected="false">Create A Room</a>

      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="/logout" role="tab"
        aria-controls="v-pills-messages" aria-selected="false">Logout</a>
    </div>
  </div>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Join the room</h1>
      <p class="lead">Here you can choose any room you want</p>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name of the Room</th>
      <th scope="col">Creator </th>
      <th scope="col">Link</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each openRooms}}
    <tr>
      <th scope="row">-</th>
      <td>{{roomName}}</td>
      <td>{{userID}}</td>
      <td><a href="{{link}}">Join the room</a></td>
      <td><button type="submit"><a href="/{{_id}}">edit</a></button>
        <button type="submit"><a name="delete" href="/{{_id}}">delete</a></button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<hr>
{{!-- <h4>Name of the Room: {{roomName}}</h4>
<h5>Creator: {{userID}}</h5>
<a href="{{link}}">Join the room</a> --}}
{{else}}

<a href="/">BabyLingual</a>

<h1>Login</h1>
<form class="form-inline" action="/login" method="POST" class="form-control mr-sm-2">
  <input id="email" type="text" name="email" placeholder="Email address">
  <input id="password" type="password" name="password" placeholder="Password">
  <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Log in</button>
</form>

{{/if}}
